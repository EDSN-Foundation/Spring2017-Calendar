@model List<String>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Registered User List</h2>

<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>Username</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @Html.ActionLink("Register new user", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
        @{ 
            int i = 0;
        }
        @foreach (String str in Model)
        {
            <tr>
                <td>@str.ToString()</td>
                <td>@*@Html.ActionLink("Remove User", "ConfirmRemoveUser", "Admin", null, new { s = (str.Replace('@', 't')).Replace('.', 't') })*@
                    @Html.ActionLink("Remove User", "ConfirmRemoveUser", "Admin", new { id = i }, null)</td>
                @{ i++; }
            </tr>
        }
    </tbody>
</table>